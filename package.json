{
  "name": "starter-kit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "fastapi": "uvicorn src.fastapi.main:app --host 0.0.0.0 --port ${NEXT_PUBLIC_FASTAPI_PORT} --reload",
    "rq": "rq worker --url ${REDIS_RQ_URL}",
    "playwright": "playwright test",
    "playwright:headed": "playwright test --headed",
    "playwright:ui": "playwright test --ui",
    "playwright:debug": "playwright test --debug",
    "playwright:auth": "playwright test tests_playwright/01-auth-*.spec.ts",
    "pytest": "source .venv/bin/activate && python -m pytest",
    "pytest:watch": "source .venv/bin/activate && python -m pytest-watch",
    "pytest:verbose": "source .venv/bin/activate && python -m pytest -v",
    "pytest:coverage": "source .venv/bin/activate && python -m pytest --cov=src --cov-report=term-missing",
    "pytest:post-collector": "source .venv/bin/activate && python -m pytest tests_pytest/services/post_collector/test_process_post.py -v",
    "test": "npm run pytest && npm run playwright",
    "format": "prettier --write . && ruff format",
    "format:check": "prettier --check . && ruff check",
    "rqdash": "rq-dashboard --redis-url ${REDIS_URL}"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "6.12.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "axios": "^1.11.0",
    "better-auth": "^1.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "^15.5.3",
    "next-intl": "^4.3.4",
    "next-plausible": "^3.12.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "playwright": "^1.54.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "prettier": "^3.6.2",
    "prisma": "6.12.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
